            </androidx.cardview.widget.CardView>


            <!-- Row 2 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardeshwarnagar"
                android:layout_width="0dp"
                android:layout_height="150dp"
